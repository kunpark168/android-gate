<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/status_color_blue"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                android:src="@drawable/img_temp_game" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBlurGameCover" />

            <!--Header-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <!--Avatar-->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="44dp"
                    android:src="@drawable/img_avatar_holder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgGender"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="40dp"
                    tools:src="@drawable/ic_female"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
                    app:layout_constraintStart_toStartOf="@+id/imgAvatar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/follow"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp11"
                    app:layout_constraintBottom_toTopOf="@+id/v1"
                    app:layout_constraintEnd_toEndOf="@+id/v1"
                    app:layout_constraintStart_toStartOf="@+id/v1" />

                <View
                    android:id="@+id/v1"
                    android:layout_width="65dp"
                    android:layout_height="1dp"
                    android:background="#8d8d8d"
                    app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
                    app:layout_constraintEnd_toStartOf="@+id/imgAvatar"
                    app:layout_constraintTop_toTopOf="@+id/imgAvatar" />

                <TextView
                    android:id="@+id/tvFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/zero_number"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp11"
                    app:layout_constraintEnd_toEndOf="@+id/v1"
                    app:layout_constraintStart_toStartOf="@+id/v1"
                    app:layout_constraintTop_toBottomOf="@+id/v1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/follower"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp11"
                    app:layout_constraintBottom_toTopOf="@+id/v2"
                    app:layout_constraintEnd_toEndOf="@+id/v2"
                    app:layout_constraintStart_toStartOf="@+id/v2" />

                <View
                    android:id="@+id/v2"
                    android:layout_width="65dp"
                    android:layout_height="1dp"
                    android:background="#8d8d8d"
                    app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
                    app:layout_constraintStart_toEndOf="@+id/imgAvatar"
                    app:layout_constraintTop_toTopOf="@+id/imgAvatar" />

                <TextView
                    android:id="@+id/tvFollower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/zero_number"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp11"
                    app:layout_constraintEnd_toEndOf="@+id/v2"
                    app:layout_constraintStart_toStartOf="@+id/v2"
                    app:layout_constraintTop_toBottomOf="@+id/v2"/>

                <TextView
                    android:id="@+id/tvUserName"
                    tools:text="Anderson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintEnd_toEndOf="@+id/imgAvatar"
                    app:layout_constraintStart_toStartOf="@+id/imgAvatar"
                    app:layout_constraintTop_toBottomOf="@+id/imgAvatar"/>

                <TextView
                    android:id="@+id/tvCounting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/so_point_and_danh_hieu"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp11"
                    app:layout_constraintEnd_toEndOf="@+id/tvUserName"
                    app:layout_constraintStart_toStartOf="@+id/tvUserName"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

                <TextView
                    android:id="@+id/tvSlogan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp11"
                    app:layout_constraintEnd_toEndOf="@+id/tvCounting"
                    app:layout_constraintStart_toStartOf="@+id/tvCounting"
                    app:layout_constraintTop_toBottomOf="@+id/tvCounting" />

                <ImageView
                    android:id="@+id/iconChart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_charts"
                    android:padding="7dp"
                    android:src="@drawable/ic_charts"
                    android:tint="@color/colorWhite"
                    android:contentDescription="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </FrameLayout>

        <include
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/shared_transparent_toolbar_layout"/>


        <LinearLayout
            android:id="@+id/navLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">
            <LinearLayout
                android:id="@+id/llHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.anhtam.gate9.v2.shared.CustomTabItem
                    android:id="@+id/tabThongTin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/wrap_padding_4dp_info"
                    app:backgroundIcon="@drawable/bg_color_home"
                    app:text="@string/tab_information"
                    app:colorIndicator="@color/tab_blue"
                    app:margin="32dp"/>
                <com.anhtam.gate9.v2.shared.CustomTabItem
                    android:id="@+id/tabFollow"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/wrap_padding_2dp_follow_red"
                    app:text="@string/tab_follow"
                    app:colorIndicator="@color/tab_orange"
                    app:colorTint="@color/tab_orange"
                    app:margin="32dp"/>
            </LinearLayout>
            <View
                android:id="@+id/tabDivider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:alpha="0.5"
                android:background="@color/colorGray"/>
            <LinearLayout
                android:id="@+id/llFeature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.anhtam.gate9.v2.shared.CustomTabItem
                    android:id="@+id/tabThaoLuan"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_tab_chat"
                    app:colorIndicator="@color/tab_orange"
                    app:text="@string/tab_discussion"
                    app:enable="true"/>
                <com.anhtam.gate9.v2.shared.CustomTabItem
                    android:id="@+id/tabDanhGia"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_tab_rating"
                    app:colorIndicator="@color/tab_orange_light"
                    app:text="@string/tab_rating"/>
                <com.anhtam.gate9.v2.shared.CustomTabItem
                    android:id="@+id/tabDuLieu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_tab_data"
                    app:colorIndicator="@color/tab_green_light"
                    app:text="@string/tab_data"/>
                <com.anhtam.gate9.v2.shared.CustomTabItem
                    android:id="@+id/tabGame"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_tab_game"
                    app:colorIndicator="@color/tab_orange_light"
                    app:text="@string/tab_game"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_4dp"
            android:background="@color/colorDivider"
            app:layout_constraintTop_toBottomOf="@id/navLayout"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toTopOf="@id/bottomLayout">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ScrollView
                android:id="@+id/infoScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.anhtam.gate9.v2.shared.TagIndicatorComponent
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tag_text="@string/thong_tin_co_ban"
                        android:layout_margin="@dimen/layout_margin_8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_id"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_short_name"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvShortName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="Soha"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_display_name"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvDisplayName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="SohaGame"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_dropdown"
                            android:tint="#ddd"
                            android:rotation="270"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_medal"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvMedal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_total_point"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvTotalPoint"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_review"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvReview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_dropdown"
                            android:tint="#ddd"
                            android:rotation="270"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_rating"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvRanking"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_dropdown"
                            android:tint="#ddd"
                            android:rotation="270"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_gender"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvGender"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_dropdown"
                            android:tint="#ddd"
                            android:rotation="270"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_birth_date"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvBirthDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_dropdown"
                            android:tint="#ddd"
                            android:rotation="270"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_current_live"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvCurrentLive"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_dropdown"
                            android:tint="#ddd"
                            android:rotation="270"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_status"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_dropdown"
                            android:tint="#ddd"
                            android:rotation="270"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_created_date"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvCreatedDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin_8dp"
                        android:layout_marginEnd="@dimen/layout_margin_8dp"
                        android:paddingTop="@dimen/padding_8dp"
                        android:paddingBottom="@dimen/padding_8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_intro"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvIntro"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"/>
                    </LinearLayout>

                    <include
                        layout="@layout/share_divider_item_layout"/>

                    <com.anhtam.gate9.v2.shared.TagIndicatorComponent
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tag_text="@string/thong_tin_lien_he"
                        android:layout_margin="@dimen/layout_margin_8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_home"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvHome"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@color/colorIndicator"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_dropdown"
                            android:tint="#ddd"
                            android:rotation="270"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_facebook"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvFacebook"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_dropdown"
                            android:tint="#ddd"
                            android:rotation="270"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_email"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@color/colorIndicator"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_phone"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_dropdown"
                            android:tint="#ddd"
                            android:rotation="270"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_skype"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvSkype"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_dropdown"
                            android:tint="#ddd"
                            android:rotation="270"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InfoSection">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/info_qq"
                            android:layout_weight="3"
                            style="@style/SmallText"/>
                        <TextView
                            android:id="@+id/tvQQ"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12345"
                            android:layout_weight="7"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">
            <com.anhtam.gate9.v2.shared.CustomTabItem
                android:id="@+id/tabNewFeed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:icon="@drawable/ic_new_feed_grey"
                app:colorIndicator="@color/colorGray"
                app:text="@string/new_feed"/>
            <com.anhtam.gate9.v2.shared.CustomTabItem
                android:id="@+id/tabMessage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:text="@string/message"
                app:icon="@drawable/ic_messenger"
                app:colorIndicator="@color/tab_message"/>
            <com.anhtam.gate9.v2.shared.CustomTabItem
                android:id="@+id/tabChat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:text="@string/chat"
                app:icon="@drawable/ic_chat_bottom"
                app:colorIndicator="@color/tab_orange"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>