<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/csTop2"
    app:layout_constraintTop_toBottomOf="@+id/csTop1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgStstus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp15"
        android:src="@drawable/ic_increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@+id/imgStstus"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_avatar_holder"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40">
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/tvRanking"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
        app:layout_constraintEnd_toEndOf="@+id/imgAvatar"
        tools:text="1"
        android:textSize="@dimen/text_size_8sp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@drawable/bg_circle_red"
        android:layout_width="@dimen/material_icon_size_16dp"
        android:layout_height="@dimen/material_icon_size_16dp" />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/imgAvatar"
        app:layout_constraintTop_toTopOf="@+id/imgAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_16dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvName"
            tools:text="Kun Park"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            app:layout_constraintTop_toTopOf="@+id/imgAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/sp11"
            tools:text="ID : 83648"
            android:layout_marginTop="@dimen/dp3"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/tvPoint"
            android:drawablePadding="@dimen/layout_margin_4dp"
            android:drawableStart="@drawable/ic_point_purple"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvFollow"
        android:textColor="@color/colorError"
        tools:text="+ Follow"
        android:fontFamily="@font/roboto_light"
        android:background="@drawable/bg_follow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="70dp"
        android:layout_marginEnd="@dimen/dp20"
        android:gravity="center"
        android:textSize="@dimen/sp_12"
        android:layout_height="@dimen/dp25" />


    <View
        android:background="@color/colorGray"
        android:alpha="0.5"
        android:layout_marginTop="@dimen/dp7"
        app:layout_constraintTop_toBottomOf="@+id/imgAvatar"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>