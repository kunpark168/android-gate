<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitleGame"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hiep khach Giang Ho Mobile"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imgStar1"
        android:layout_marginTop="@dimen/dp3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleGame"
        android:src="@drawable/ic_star_done"
        android:layout_width="@dimen/dp12"
        android:layout_height="@dimen/dp12" />

    <ImageView
        android:id="@+id/imgStar2"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/imgStar1"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleGame"
        android:src="@drawable/ic_star_done"
        android:layout_width="@dimen/dp12"
        android:layout_height="@dimen/dp12" />

    <ImageView
        android:id="@+id/imgStar3"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/imgStar2"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleGame"
        android:src="@drawable/ic_star_done"
        android:layout_width="@dimen/dp12"
        android:layout_height="@dimen/dp12" />

    <ImageView
        android:id="@+id/imgStar4"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/imgStar3"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleGame"
        android:src="@drawable/ic_half_star"
        android:layout_width="@dimen/dp12"
        android:layout_height="@dimen/dp12" />

    <ImageView
        android:id="@+id/imgStar5"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/imgStar4"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleGame"
        android:src="@drawable/ic_star_non"
        android:layout_width="@dimen/dp12"
        android:layout_height="@dimen/dp12" />

    <TextView
        android:id="@+id/tvRatingCount"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/sp_10"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleGame"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toEndOf="@+id/imgStar5"
        android:layout_width="wrap_content"
        android:layout_height="13dp" />

    <LinearLayout
        android:id="@+id/imgUser"
        android:gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleGame"
        app:layout_constraintStart_toEndOf="@+id/tvRatingCount"
        android:layout_width="@dimen/dp12"
        android:layout_height="@dimen/dp12">
        <ImageView
            android:src="@drawable/ic_gamer"
            android:tint="@color/colorGray"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCounting"
        android:gravity="center"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="3dp"
        android:layout_marginStart="3dp"
        android:textSize="@dimen/sp_10"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleGame"
        app:layout_constraintStart_toEndOf="@+id/imgUser"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp12" />

    <TextView
        android:id="@+id/tvCountingFollow"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp3"
        android:textSize="@dimen/sp_10"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toBottomOf="@+id/imgStar1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp12" />

    <ImageView
        android:id="@+id/imgRate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_charts"
        android:padding="@dimen/dp7"
        android:src="@drawable/ic_charts"
        android:tint="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>