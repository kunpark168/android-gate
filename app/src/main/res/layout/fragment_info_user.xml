<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeRefreshLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.anhtam.gate9.v2.shared.TagIndicatorComponent
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tag_text="@string/thong_tin_co_ban"
                android:layout_margin="@dimen/layout_margin_8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_id"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="12345"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_short_name"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvShortName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Soha"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_display_name"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvDisplayName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="SohaGame"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_dropdown"
                    android:tint="#ddd"
                    android:rotation="270"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_medal"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvMedal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="12345"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_total_point"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvTotalPoint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="12345"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_review"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvReview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="12345"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_dropdown"
                    android:tint="#ddd"
                    android:rotation="270"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_rating"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvRanking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="12345"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_dropdown"
                    android:tint="#ddd"
                    android:rotation="270"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_gender"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="12345"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_dropdown"
                    android:tint="#ddd"
                    android:rotation="270"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_birth_date"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvBirthDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="12345"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_dropdown"
                    android:tint="#ddd"
                    android:rotation="270"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_current_live"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
