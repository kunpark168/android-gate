                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_dropdown"
                    android:tint="#ddd"
                    android:rotation="270"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_created_date"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvCreatedDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="12345"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_8dp"
                android:layout_marginEnd="@dimen/layout_margin_8dp"
                android:paddingTop="@dimen/padding_8dp"
                android:paddingBottom="@dimen/padding_8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_intro"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvIntro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="12345"
                    android:layout_weight="7"/>
            </LinearLayout>

            <include
                layout="@layout/share_divider_item_layout"/>

            <com.anhtam.gate9.v2.shared.TagIndicatorComponent
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tag_text="@string/thong_tin_lien_he"
                android:layout_margin="@dimen/layout_margin_8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_home"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="12345"
                    android:layout_weight="7"
                    android:textColor="@color/colorIndicator"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_dropdown"
                    android:tint="#ddd"
                    android:rotation="270"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_facebook"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
