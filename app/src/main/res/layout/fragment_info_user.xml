                    android:layout_height="16dp"
                    android:src="@drawable/ic_dropdown"
                    android:tint="#ddd"
                    android:rotation="270"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_email"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="12345"
                    android:layout_weight="7"
                    android:textColor="@color/colorIndicator"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_phone"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="12345"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_dropdown"
                    android:tint="#ddd"
                    android:rotation="270"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_skype"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvSkype"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="12345"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_dropdown"
                    android:tint="#ddd"
                    android:rotation="270"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InfoSection">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_qq"
                    android:layout_weight="3"
                    style="@style/SmallText"/>
                <TextView
                    android:id="@+id/tvQQ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="12345"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

