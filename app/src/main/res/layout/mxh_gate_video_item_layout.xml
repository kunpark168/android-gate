<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/layout_margin_4dp"
    android:padding="@dimen/layout_margin_4dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/tvNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="@string/sample_title_news"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/layout_margin_8dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bannerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvNews"
        android:layout_marginTop="@dimen/layout_margin_8dp">

        <ImageView
            android:id="@+id/imgBannerGame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/img_holder_banner"
            app:layout_constraintDimensionRatio="15:8"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/imgBannerGame"
            app:layout_constraintBottom_toBottomOf="@id/imgBannerGame"
            android:background="#10090000" />
        <ImageView
            android:id="@+id/imgIconPlay"
            android:contentDescription="@null"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_play"
            app:layout_constraintBottom_toBottomOf="@id/imgBannerGame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgBannerGame" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgaAvatarGame"
        android:layout_width="@dimen/image_circle_medium"
        android:layout_height="@dimen/image_circle_medium"
        android:src="@drawable/img_avatar_holder"
        app:layout_constraintStart_toStartOf="@id/bannerLayout"
        app:layout_constraintTop_toBottomOf="@id/bannerLayout"
        android:layout_marginTop="@dimen/layout_margin_8dp"/>

    <TextView
        android:id="@+id/tvTitleGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="@color/black"
        android:text="@string/sample_title_game"
        app:layout_constraintTop_toTopOf="@id/imgaAvatarGame"
        app:layout_constraintStart_toEndOf="@id/imgaAvatarGame"
        app:layout_constraintBottom_toTopOf="@id/tvTypeGame"
        android:layout_marginStart="@dimen/layout_margin_16dp"/>
    <TextView
        android:id="@+id/tvTypeGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="3-6 19:23"
        app:layout_constraintTop_toBottomOf="@id/tvTitleGame"
        app:layout_constraintStart_toStartOf="@id/tvTitleGame"
        app:layout_constraintBottom_toBottomOf="@id/imgaAvatarGame"/>
</androidx.constraintlayout.widget.ConstraintLayout>
