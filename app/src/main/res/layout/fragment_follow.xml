<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:ignore="ContentDescription">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_component_height"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <com.anhtam.gate9.v2.shared.CustomTabItem
            android:id="@+id/tab01"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            app:icon="@drawable/ic_all"
            app:text="@string/all"
            app:colorIndicator="@color/tab_orange"
            app:enable="true"
            />
        <View
            android:id="@+id/vTabDiscussion"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:alpha="0.5"
            android:background="@color/colorGray"/>
        <com.anhtam.gate9.v2.shared.CustomTabItem
            android:id="@+id/tab02"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            app:icon="@drawable/ic_gamer"
            app:text="@string/game_thu"
            app:colorIndicator="@color/tab_green"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:alpha="0.5"
            android:background="@color/colorGray"/>

        <com.anhtam.gate9.v2.shared.CustomTabItem
            android:id="@+id/tab03"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            app:icon="@drawable/ic_leanpub"
            app:text="@string/nph_short"
            app:colorIndicator="@color/tab_purple"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:alpha="0.5"
            android:background="@color/colorGray"/>
        <com.anhtam.gate9.v2.shared.CustomTabItem
            android:id="@+id/tab04"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            app:icon="@drawable/ic_play_game"
            app:text="@string/game_tab"
            app:colorIndicator="@color/tab_blue"/>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpFollow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
