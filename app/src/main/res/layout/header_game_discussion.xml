<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Header-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csTop"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bannerImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlurGameCover" />


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/llAvatarGame"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp155"
        android:layout_marginStart="@dimen/layout_margin_8dp">
        <com.anhtam.gate9.share.view.RoundRectCornerImageView
            android:id="@+id/avatarImageView"
            android:scaleType="centerCrop"
            tools:src="@drawable/img_holder_banner"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/csTop"
        app:layout_constraintStart_toEndOf="@id/llAvatarGame"
        app:layout_constraintEnd_toEndOf="@id/iconBXH"
        tools:text="Hiep khach Giang Ho Mobile"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_8dp"
        android:layout_marginTop="@dimen/layout_margin_4dp"/>

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/ratingBarStyleSmall"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/tvFollowAndPost"
        app:layout_constraintStart_toStartOf="@id/tvTitle"/>

    <TextView
        android:id="@+id/tvFollowAndPost"
        android:gravity="center"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="3dp"
        android:layout_marginStart="3dp"
        android:textSize="@dimen/sp_10"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp12"
        app:layout_constraintBottom_toBottomOf="@id/llAvatarGame"
        app:layout_constraintTop_toBottomOf="@id/ratingBar"
        app:layout_constraintStart_toStartOf="@id/tvTitle"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconBXH"
        android:layout_width="@dimen/material_icon_size_24dp"
        android:layout_height="@dimen/material_icon_size_24dp"
        android:layout_marginEnd="@dimen/layout_margin_16dp"
        android:background="@drawable/bg_charts"
        android:padding="@dimen/dp7"
        android:src="@drawable/ic_charts"
        android:tint="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@id/llAvatarGame"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        app:layout_constraintTop_toBottomOf="@id/llAvatarGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/share_divider_item_layout"
        android:layout_marginTop="@dimen/layout_margin_8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>